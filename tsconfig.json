{
  "include": ["src/*"],
  "compilerOptions": {
    "allowJs":true,
    "declaration":true,
    "emitDeclarationOnly":true,
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": ["node_modules", "test"]
}
